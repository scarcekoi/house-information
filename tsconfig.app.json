{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,                     // Allow JS and JSX files
    "resolveJsonModule": true,           // Allow resolving JSON modules
    "esModuleInterop": true              // Ensure compatibility between ES modules and CommonJS
  },
  "include": ["src", "src/charts/totalhousepoints.d.ts"] // Include the new type declaration
}